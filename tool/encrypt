#!/usr/bin/env bash

set -eu

dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

function usage
{
  echo "usage: $0 <about> [<in dir> <out dir>]"
  exit 1
}

[ $# -eq 1 -o $# -eq 3 ] || usage

paste=$1
in=${2:-$dir/../src/paste}
out=${3:-$dir/../paste}

# $1 => input file
# $2 => output file
# $3 => secret key
function encrypt
{
  rm -f "$2"
  openssl aes-256-cbc -pass pass:$3 -in "$1" -out "$2"
  chmod a-w "$2" # Tell the cleanup script to leave this alone
  echo "encrypted paste written to $2"
}

case "$paste" in
  'about')
    encrypt "$in/$paste" \
            "$out/14e3c3ce" \
            "371864573d2a445868316521cc3cc374413f3eb04978281c964527cdc79a64bb"
    ;;
  *)
    usage
    ;;
esac
